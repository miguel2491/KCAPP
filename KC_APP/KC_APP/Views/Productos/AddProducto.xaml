<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="background2.jpg"
             x:Class="KC_APP.Views.Productos.AddProducto">
    <ContentPage.Content>
        <StackLayout Margin="20,50,20,20">
            <Entry
                Placeholder="Descripción"
                PlaceholderColor="Aqua"
                TextColor="#fff"
                x:Name="producto"
                />
            <Entry
                Margin="5,25,5,5"
                Placeholder="Precio"
                PlaceholderColor="Aqua"
                TextColor="#fff"
                x:Name="Precio"
                />
            <Entry
                Margin="5,15,5,5"
                Placeholder="Cantidad"
                PlaceholderColor="Aqua"
                TextColor="#fff"
                x:Name="Cantidad"
                />
            <StackLayout Margin="100,30,100,30">
                <Button
                    Text="Guardar"
                    BackgroundColor="#66b2fe"
                    x:Name="btnGuardar"
                    Clicked="btnGuardar_Clicked"
                />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>